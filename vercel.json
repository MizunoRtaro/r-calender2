{
    "functions": {
      "api/*.js": {
        "memory": 1024,
        "maxDuration": 10
      }
    },
    "rewrites": [
      {
        "source": "/(.*)",
        "destination": "/index.html"
      }
    ],
    "build": {
      "env": {
        "CLIENT_ID": "@client_id",
        "SPREADSHEET_ID": "@spreadsheet_id"
      }
    }
  }